<Window x:Class="PaocomBife.Cardapio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paocombife"
        mc:Ignorable="d"
        Title="Cardapio" Height="450" Width="587.766">
    <Grid Margin="0,0,2,0">
        <Label Content="Nome do Produto" HorizontalAlignment="Left" Margin="340,43,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="Preço" HorizontalAlignment="Left" Margin="468,43,-13,0" VerticalAlignment="Top" Width="123"/>
        <TextBox x:Name="Produto" HorizontalAlignment="Left" Height="23" Margin="343,69,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Preço" HorizontalAlignment="Left" Height="23" Margin="471,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107"/>
        <Button x:Name="Adicionar_Produto" Content="Adicionar Produto" HorizontalAlignment="Left" Margin="340,110,0,0" VerticalAlignment="Top" Width="115" Click="Adicionar_Produto_Click"/>
        <Button x:Name="Excluir_Produto" Content="Excluir Produto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Margin="343,135,0,0" Click="Excluir_Produto_Click"/>
        <DataGrid x:Name="ListaCardapio" HorizontalAlignment="Left" Height="379" Margin="10,30,0,0" VerticalAlignment="Top" Width="325" SelectionMode="Single" />
        <Button x:Name="AlterarDadosBotao" Content="Alterar Dados" HorizontalAlignment="Left" Margin="343,382,0,0" VerticalAlignment="Top" Width="88" Height="27" Click="AlterarDadosBotao_Click"/>

    </Grid>
</Window>
